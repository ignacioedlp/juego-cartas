---
import Deck from '../components/Deck';
import Header from '../components/Header.astro';
import { DESCONECTADOS } from '../config/constant';
import Layout from '../layouts/Layout.astro';

const cards = DESCONECTADOS.map((question, index) => {
  return {
    question: question.question,
    category: 'Desconectados',
    color: 'purple',
  };
});
---


<Layout>
  <main>
    <Deck client:visible questions={cards} title='Desconectados' />
  </main>
</Layout>
